#:kivy 2.1.0

<URLScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 5
        TextInput:
            id: url
            multiline: False
            hint_text: 'Masukkan Link'
            on_text: root.contentURL()
        Button:
            text: 'Lanjutkan'
            on_press: root.manager.current = 'media'
            background_color: (1, 0, 0, 1)


<MediaDownload>:
    BoxLayout:
        orientation: 'horizontal'
        padding: 30
        spacing: 20
        Button:
            text: 'Download Audio'
            on_press: root.audio_download()
        Button:
            text: 'Download Video'
            on_press: root.video_download()

            
        


